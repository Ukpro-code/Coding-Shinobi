# Environment variables for development
DATABASE_URL=sqlite:///./learning_system.db

# For PostgreSQL (when ready to upgrade)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/learning_system

# Redis (optional for now)
REDIS_URL=redis://localhost:6379

# OpenAI API Key - get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Security - change these in production
SECRET_KEY=your-secret-key-here-change-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800

# AI Processing
MAX_CONTENT_LENGTH=10000
BATCH_SIZE=10
